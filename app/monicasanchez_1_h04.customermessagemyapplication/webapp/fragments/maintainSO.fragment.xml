<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog showHeader="false" afterClose="onPressMaintainFragment" >
		<content>
			<VBox>
				<l:Grid defaultSpan="XL12 L12 M12 S12"  class="sapUiMediumMarginTopBottom">
					<VBox>
						<Text text="{i18n>confirmApprove}" textAlign="Center" class="sapUiSmallMarginTop"/>
					</VBox>
				</l:Grid>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>accept}" press="onPressAccepConfirmApprove"/>
		</beginButton>
		<endButton>
   		    <Button text="{i18n>cancel}" press="onPressCloseConfirmApprove"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>